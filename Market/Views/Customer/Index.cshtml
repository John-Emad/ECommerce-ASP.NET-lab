@model List<Customer>
@{
    ViewBag.Title = "All Customers";
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @customer.Id
                </td>
                <td>
                    @customer.Name
                </td>
                <td>
                    <a asp-action="CustomerDetails" asp-route-id="@customer.Id" class="btn btn-primary">Details</a>                  
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-primary">Add Customer</a>
