@model List<Market.Models.User>
@{
    ViewBag.Title = "Users";
}
<h2>All Users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.UserRoles.Select(ur => ur.Role.Name))</td>
                <td>
                    <a asp-action="Assign" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Assign Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
