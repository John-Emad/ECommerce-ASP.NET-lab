@model List<Market.Models.Role>

<h2>Roles</h2>

<a asp-action="Create" class="btn btn-success mb-2">Add New Role</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
