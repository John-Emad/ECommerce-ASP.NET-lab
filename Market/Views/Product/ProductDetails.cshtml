@model Product
@{
    //Layout = null;
    ViewBag.Title = "Product Details";
}

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Id:</span>
    <span>@Model.Id</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Name:</span>
    <span>@Model.Name</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Category:</span>
    <span>@Model.Category?.Name</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Price:</span>
    <span>@Model.Price</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Quantity:</span>
    <span>@Model.Quantity</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Production Date:</span>
    <span>@Model.ProductionDate</span>
</div>

<div class="d-flex mb-2">
    <span class="fw-bold me-2">Expiry Date:</span>
    <span>@Model.ExpiryDate</span>
</div>