@model List<Product>
@{
    ViewBag.Title = "All Products";
}

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <td>
                    Category
                </td>
                <td>
                    Actions
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>
                        @product.Id
                    </td>
                    <td>
                        @product.Name
                    </td>
                    <td>
                        @product.Category?.Name
                    </td>
                    <td>
                        <a asp-action="ProductDetails" asp-route-id="@product.Id" class="btn btn-primary">Details</a>
                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" onclick="return confirm('Are you sure you want to delete student?')" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="AddProduct" asp-controller="Product" class="btn btn-primary">Add Product</a>
